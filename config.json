[
    {
        "repo": "monkeydioude/donut",
        "proj_dir": "donut",
        "base_dir": "/var/www",
        "branches":
        [
            {
                "branch" :"master",
                "actions":
                [
                    {
                        "action": "push",
                        "commands":
                        [
                            ["cd", "%base_dir%"],
                            ["git", "clone", "%html_url%"],
                            ["cd", "%proj_dir%"],
                            ["git", "fetch", "--all"],
                            ["git", "checkout", "master"],
                            ["git", "reset", "--hard", "origin/master"],
                            ["make"]
                        ]
                    }
                ]
            }
        ]
    }
]
