{
    "github_hook": "/josuke/github",
    "bitbucket_hook": "/josuke/bitbucket",
    "port": 8082,
    "deployment":
    [
        {
            "repo": "monkeydioude/josuke",
            "proj_dir": "josuke",
            "base_dir": "/var/go/src/github.com/monkeydioude",
            "branches":
            [
                {
                    "branch" :"master",
                    "actions":
                    [
                        {
                            "action": "push",
                            "commands":
                            [
                                ["cd", "%base_dir%"],
                                ["git", "clone", "git@github.com:monkeycddioude/josuke.git"],
                                ["cd", "%proj_dir%"],
                                ["git", "checkout", "master"],
                                ["git", "pull", "--rebase"],
                                ["cd", "bin", "%proj_dir%"],
                                ["go", "install"],
                                ["service", "josuke", "restart"]
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
